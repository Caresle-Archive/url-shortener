<div class="container">
	<form action="/shrink" method="POST" class="my-4 form-inline">
		<label for="fullUrl" class="sr-only">URL</label>
		<input required type="url" name="fullUrl" id="fullUrl" placeholder="url" class="form-control col mr-2"/>
		<button type="submit" class="btn btn-primary">Shrink</button>
	</form>

	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th>Full URL</th>
				<th>Shrink URL</th>
			</tr>
		</thead>
		<tbody>
			{{#each url}}
				<tr>
					<td><a href="{{ this.fullUrl }}">{{ this.fullUrl }}</a></td>
					<td><a href="{{ this.shrinkUrl }}">{{ this.shrinkUrl }}</a></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>