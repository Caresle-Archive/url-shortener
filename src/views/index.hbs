<div class="container">
	<form action="" method="POST" class="my-4 form-inline">
		<div class="row">
			<label for="url" class="sr-only">URL</label>
			<div class="col">
				<input type="url" name="url" id="url" placeholder="url" class="form-control col mr-2"/>
			</div>
			<div class="col">
				<button type="submit" class="btn btn-primary">Shrink</button>
			</div>
		</div>
	</form>

	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th>Full URL</th>
				<th>Shrink URL</th>
			</tr>
		</thead>
		<tbody>
			{{#each url}}
				<tr>
					<td><a href="{{ this.fullUrl }}">{{ this.fullUrl }}</a></td>
					<td><a href="{{ this.shrinkUrl }}">{{ this.shrinkUrl }}</a></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>